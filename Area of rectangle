#include<iostream>
using namespace std;
class rectangle
{
	int length;
	int breadth;
	public:
		void setdata (int l,int b)
		{
			length = l ;
			breadth =b;
		}
		void showdata()
		{
			cout<<"Length = "<<length<<endl;
			cout<<"Breadth = "<<breadth<<endl;
		}
		int area()
		{
			return length*breadth;
		}
		void getdata()
		{
			cout<<"Enter length: ";
			cin>>length;
			cout<<"Enter breadth: ";
			cin>>breadth;
			setdata(length,breadth);
		}
	};
		int main()
		{
			rectangle r;
			r.getdata();
			r.showdata();
			cout<<"Area = "<<r.area();
			
		}
