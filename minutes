#include<iostream>
using namespace std;
class time
	{
		int hours,minutes,seconds,hours1,minutes1,seconds1;
		public:
			void set_time(int hrs,int mins,int secs)
			{
				hours=hrs;
				minutes=mins;
				seconds=secs;
				
			}
			void get_time()
			{
				cout<<"Enter time in hour,minutes and seconds : ";
				cin>>hours>>minutes>>seconds;
			}
			void next_time()
			{
				int hrs1,mins1,secs1;
				cout<<"Enter next time :"<<endl;
				cout<<"Enter next time in hour, minutes and seconds";
				cin>>hrs1>>mins1>>secs1;
				hours1=hrs1+hours;
				minutes1=mins1+minutes;
				seconds1=secs1+seconds;
			}	
			
			void show_time()
			{
				cout<<"The time is "<<hours<<"hrs "<<minutes<<"mins "<<seconds <<"secs "<<endl
			<< "The added time is"<<hours1<<"hrs "<<minutes1<<"mins "<<seconds1<<"secs ";
			}
		};
int main()
{
	time t;
	t.get_time();
	t.next_time();
	t.show_time();
}
	
