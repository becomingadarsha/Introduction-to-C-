#include <iostream>

class Time
{
    int hour,min,sec;
    public:
        void display();
        void read();
        void add(Time a, Time b);
};

void Time :: display()
        {
            std:: cout << hour << " : " << min << " : " << sec << std::endl;
        }


void Time :: read()
        {
            std:: cout << "Enter hour: min: second: ";
            std:: cin >> hour >> min >> sec;
        }

void Time :: add(Time a, Time b){
        sec = a.sec + b.sec;
        min = (a.min+b.min) + (sec/60);
        sec = sec%60;
        hour = (a.hour+b.hour) + (min/60);
        min = min%60;
}
int main()
{
    Time t1,t2,t3;
    t1.read();
    t2.read();
    t1.display();
    t2.display();
    t3.add(t1,t2);
    t3.display();
    return 0;
}
